<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.orangecoastcollege.cs273.ttran1272.occarsnew.LoanSummaryActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/oc_cars_logo" />

    <TextView
        android:id="@+id/loanSummaryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/steel_blue"
        android:layout_below="@id/imageView2"
        android:textColor="@color/bone_white"
        android:gravity="center"
        android:text="@string/loan_summary" />

    <TextView
        android:id="@+id/loanSummaryTextView"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/loanSummaryTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/noteTextView"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@+id/loanSummaryTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/goDataEntryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_data_entry"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onclick="goToData"/>

</RelativeLayout>
